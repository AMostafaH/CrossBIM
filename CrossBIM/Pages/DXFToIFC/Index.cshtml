@page
@model CrossBIM.Pages.DXFToIFC.IndexModel
@{
}
<div class="mt-3 container">
    <div style="margin: auto;width:60%">

        <h3>Project Information</h3>
        <hr />

        <div class="modal-body">
            <form method="post" id="projectInfo">

                <div class="modal-body">

                    @if (Model.Message != null)
                    {
                        <span class="text-danger" style="display:inline-block;margin-bottom:10px">@Model.Message</span>
                    }

                    <div class="form-group row">
                        <label asp-for="ProjectName" class="col-md-5 col-form-label">Enter Project Name</label>
                        <div class="col-md-7">
                            <input asp-for="ProjectName" class="form-control">
                            <span asp-validation-for="ProjectName" class="alert-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="FootingStatus" class="col-md-5 col-form-label">Do you want to add Footing?</label>
                        <div class="col-md-7">
                            <select asp-for="FootingStatus" class="form-control">
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                            <span asp-validation-for="FootingStatus" class="alert-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ProjectUnits" class="col-md-5 col-form-label">Project Units</label>
                        <div class="col-md-7">
                            <select asp-for="ProjectUnits" class="form-control">
                                <option value="m">Meter</option>
                                <option value="cm">centimeter</option>
                                <option value="mm">Millimeter</option>
                                <option value="inch">Inch</option>
                            </select>
                            <span asp-validation-for="ProjectUnits" class="alert-danger"></span>
                        </div>
                    </div>

                </div>
            </form>
        </div>
        <div class="modal-footer">
            @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
            <button id="submitForm" type="button" class="btn btn-info">Save changes</button>
        </div>

    </div>
</div>


<script>
    document.getElementById("submitForm").addEventListener("click", function () {
        document.forms["projectInfo"].submit();
    });
</script>
