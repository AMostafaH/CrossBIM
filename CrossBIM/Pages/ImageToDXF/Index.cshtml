@page
@model CrossBIM.Pages.ImageToDXF.IndexModel
@{
}
<div class="mt-3 container">
    <div style="margin: auto;width:60%">

        <h3>Project Information</h3>
        <hr />

        <div class="modal-body">
            <form method="post" id="projectInfo" enctype="multipart/form-data">

                <div class="modal-body">

                    @if (Model.Message != null)
                    {
                        <span class="text-danger" style="display:inline-block;margin-bottom:10px">@Model.Message</span>
                    }

                    <div class="form-group row">
                        <label asp-for="ProjectName" class="col-md-5 col-form-label">Enter Project Name</label>
                        <div class="col-md-7">
                            <input asp-for="ProjectName" class="form-control">
                            <span asp-validation-for="ProjectName" class="alert-danger"></span>
                        </div>
                    </div>

                    <span id="validation" class="text-danger"></span>
                    <div class="form-group row">
                        <label asp-for="RefFile" class="col-md-5 col-form-label">Upload Your File</label>
                        <div class="col-md-7">
                            @*accept="image/*" *@
                            <input type="file" asp-for="RefFile" class="form-control" id="fileName" accept=".jpg,.jpeg,.png,.bmp" onchange="validateFileType()" />
                            <span asp-validation-for="RefFile" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                    <button id="submitForm" type="submit" asp-page-handler="DownloadFile" class="btn btn-info">Download DXF File</button>
                </div>
            </form>
        </div>
        <!--<div class="modal-footer">-->
            @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
            <!--<button id="submitForm" class="btn btn-info">Save Changes</button>
        </div>-->
    </div>
</div>

